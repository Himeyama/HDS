<Page
    x:Class="HDS.FirstPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid RowDefinitions="*, Auto">
            <StackPanel Grid.Row="0" Margin="16, 24, 16, 16">
                <TextBlock x:Uid="SetupTitle" Name="SetupTitle" Text="Application Software Setup Wizard" FontSize="16" FontWeight="Bold" />
                <TextBlock x:Uid="FirstPageDescription" Name="FirstPageDescription"
                    Margin="0, 16, 0, 0"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16, 16, 16, 16" HorizontalAlignment="Right">
                <Button Click="NextButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <TextBlock x:Uid="Next" Text="Next" />
                </Button>
                <Button Click="CancelButton_Click" Margin="16, 0, 0, 0">
                    <TextBlock x:Uid="Cancel" Text="Cancel" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>