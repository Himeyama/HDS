<Page
    x:Class="HDS.DonePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid RowDefinitions="*, Auto">
            <StackPanel Grid.Row="0" Margin="16, 24, 16, 16">
                <TextBlock x:Uid="SetupDoneTitle" Name="SetupDoneTitle" FontSize="16" FontWeight="Bold" />
                <TextBlock x:Uid="SetupDoneDescription" Name="SetupDoneDescription"
                    Margin="0, 16, 0, 0"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16, 16, 16, 16" HorizontalAlignment="Right">
                <Button Click="DoneButton_Click" Style="{StaticResource AccentButtonStyle}">
                    <TextBlock x:Uid="Done" Text="Done" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>