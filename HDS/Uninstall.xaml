<Page
    x:Class="HDS.Uninstall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid RowDefinitions="*, Auto">
            <StackPanel Grid.Row="0" Margin="16, 24, 16, 16">
                <TextBlock x:Uid="UninstallTitle" Name="UninstallTitle" Text="Uninstall" FontSize="16" FontWeight="Bold" />
                <TextBlock x:Uid="UninstallPageDescription" Name="UninstallPageDescription"
                    Margin="0, 16, 0, 0"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16, 16, 16, 16" HorizontalAlignment="Right">
                <Button Click="UninstallButton_Click" Style="{StaticResource AccentButtonStyle}" x:Name="UninstallButton">
                    <TextBlock x:Uid="Uninstall" Text="Uninstall" />
                </Button>
                <TextBlock x:Uid="UninstallDescription" x:Name="UninstallDescription" Visibility="Collapsed" />
                <TextBlock x:Uid="UninstallDoneDescription" x:Name="UninstallDoneDescription" Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>